<% if @repos.current_page_count < 1 %>

  <% title 'Fetching your watched repos...' -%>
  <div class="alert alert-info">
    <h4 class="alert-heading">We are fetching your watched repos from Github...</h4>
    Please wait a few seconds, and they should start to appear below. If you think you have been waiting too long (10 seconds is not too long, 10 days is!), please refresh this page. If you still don't see anything, please <a href="https://github.com/joelmoss/gitchen/issues" target="_blank">let me know</a>.
  </div>
  <div id="loading"></div>

<% else %>

  <%- title 'You are watching...' -%>

  <div class="well">

    <% content_for :sort_options do %>
      <li><%= sort :'repos.watchers_count', as: 'Watchers' %></li>
      <li><%= sort :'repos.forks', as: 'Forks' %></li>
      <li><%= sort :'repos.open_issues', as: 'Open Issues' %></li>
      <li><%= sort :'repos.size', as: 'Size' %></li>
      <li><%= sort :'repos.name', as: 'Name' %></li>
      <li><%= sort :'users.username', as: 'Owner' %></li>
    <% end -%>

    <%= render 'kaminari/page_entries_info', :collection => @repos %>

    <table class="table table-striped">
      <tbody>
        <%= render partial: 'repos/repo', collection: @repos %>
      </tbody>
    </table>

    <%= render 'kaminari/page_entries_info', :collection => @repos %>

  </div>

<% end %>